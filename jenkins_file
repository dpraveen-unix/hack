node {    
      def app     
      stage('Get repo') {               
             
            checkout scm    
      }     
      stage('Build image') {         
       
sh "docker build ."
}     
      stage('Test image') {           
            app.inside {            
             
             sh 'echo "Image is successful"'        
            }    
        }     
       stage('Push image') {
       docker.withRegistry('https://registry.hub.docker.com', 'dockerhub') {    
       def customImage = docker.build("pravamsi/centos")
       app.push("latest")        
              }    
           }
        }
